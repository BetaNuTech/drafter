<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p class="lead">
        Compose
        <%= @message_type.name %>
        Message for
        <%= @messageable.name %>
      </p>
      <%= render partial: 'form', locals: { message: @message, message_type: @message_type }  %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <br/>
      <%= link_to 'Back', url_for(@messageable), class: "btn btn-xs btn-info" %>
    </div>
  </div>
</div>
