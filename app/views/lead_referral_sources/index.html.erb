<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Lead Referral Sources</h1>
    </div>
    <% if policy(LeadReferralSource).new? %>
      <div class="col-md-6 text-right">
        <%= link_to('Create a Lead Referral Source', new_lead_referral_source_path, class: "btn btn-xs btn-primary" ) %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% if @lead_referral_sources.empty? %>
        <p class="lead">None</p>
      <% else %>
        <thead>
          <table class="table">
            <th>Name</th>
            <th>Actions</th>
          </thead>
          <tbody>
            <% @lead_referral_sources.each do |lead_referral_source| %>
              <tr>
                <td><%= lead_referral_source.name %></td>
                <td>
                  <%= link_to lead_referral_source do %><%= glyph(:show) %><% end if policy(lead_referral_source).show? %>&nbsp;
                  <%= link_to edit_lead_referral_source_path(lead_referral_source) do %><%= glyph(:edit) %><% end if policy(lead_referral_source).edit? %>&nbsp;
                  <%= link_to lead_referral_source, method: :delete, data: { confirm: 'Are you sure?' } do %><%= glyph(:delete) %><% end if policy(lead_referral_source).destroy? %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>

</div>
