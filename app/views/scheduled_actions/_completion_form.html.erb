<%= render partial: "summary", locals: { scheduled_action: @scheduled_action} %>
<%= form_with(model: @scheduled_action, action: complete_scheduled_action_path(@scheduled_action) ) do |form| %>
  <div class="fieldset_content">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-4 form-group">
            <%= form.select(:completion_action, select_scheduled_action_action(@scheduled_action.completion_action), {prompt: '-Please Select-'}, class: "form-control") %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 form-group">
            <%= form.label :completion_message, "Memo" %>
            <%= form.text_area :completion_message, class: "form-control", rows: 5 %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>

<% end %>
