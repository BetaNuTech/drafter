<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>Team: <%= @team.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>
        <strong>Name:</strong>
        <%= @team.name %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>
        <strong>Description:</strong>
        <%= @team.description %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>
        <strong>Created At:</strong>
        <%= @team.created_at %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>
        <strong>Updated At:</strong>
        <%= @team.updated_at %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'Edit', edit_team_path(@team) %> |
      <%= link_to 'Back', teams_path %>
    </div>
  </div>
</div>

