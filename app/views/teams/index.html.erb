<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Teams</h1>
    </div>
    <div class="col-md-6 text-right">
      <%= glyph(:create) %>
      <%= link_to 'Create New Team', new_team_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @teams.each do |team| %>
            <tr>
              <td><strong><%= team.name %></strong></td>
              <td><%= team.description %></td>
              <td>
                <%= link_to team do %><%= glyph(:show) %><% end %>&nbsp;
                <%= link_to edit_team_path(team) do %><%= glyph(:edit) %><% end %>&nbsp;
                <%= link_to team, method: :delete, data: { confirm: 'Are you sure?' } do %><%= glyph(:delete) %><% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right">
      <%= glyph(:create) %>
      <%= link_to 'Create New Team', new_team_path %>
    </div>
  </div>
</div>
