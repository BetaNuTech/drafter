<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Lead Source: <%= @lead_source.name %></h1>
      <p id="notice"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <p>
        <strong>Name:</strong><br/>
        <%= @lead_source.name %>
      </p>
      <p>
        <strong>Slug:</strong><br/>
        <%= @lead_source.slug %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <p>
        <strong>Active?</strong>
        <%= @lead_source.active %>
      </p>
    </div>
    <div class="col-md-2">
      <p>
        <strong>Incoming?</strong>
        <%= @lead_source.incoming %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <p>
        <strong>API Token</strong>
        <%= @lead_source.api_token %>
        <%= link_to('Reset', reset_token_lead_source_path(@lead_source), class: "btn btn-info btn-xs", method: :post)%>
      </p>

    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to 'Edit', edit_lead_source_path(@lead_source) %> |
      <%= link_to 'Back', lead_sources_path %>
    </div>
  </div>
</div>
