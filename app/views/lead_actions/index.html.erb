<div class="container">
  <div class="row">
    <div class="col-md6">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
  <div classs="row">
    <div class="col-md-6">
      <h1>Lead Actions</h1>
    </div>
    <% if policy(LeadAction).new? %>
      <div class="col-md-6 text-right">
        <%= glyph(:create) %>
        <%= link_to 'Create New Lead Action', new_lead_action_path %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Active?</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @lead_actions.each do |lead_action| %>
            <tr>
              <td class="first-column"><%= lead_action.name %></td>
              <td><%= lead_action.description %></td>
              <td><%= lead_action.active ? "Yes" : "No" %></td>
              <td>
                <%= link_to 'Show', lead_action %> |
                <%= link_to 'Edit', edit_lead_action_path(lead_action) %> |
                <%= link_to 'Destroy', lead_action, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div classs="row">
    <% if policy(LeadAction).new? %>
      <div class="col-md-12 text-right">
        <%= glyph(:create) %>
        <%= link_to 'Create New Lead Action', new_lead_action_path %>
      </div>
    <% end %>
  </div>
</div>
