<div class="container">
  <div classs="row">
    <div class="col-md-6">
      <h1>Lead Actions</h1>
    </div>
    <% if policy(LeadAction).new? %>
      <div class="col-md-6 text-right">
        <%= glyph(:create) %>
        <%= link_to 'Create New Lead Action', new_lead_action_path %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Glyph</th>
            <th>Description</th>
            <th>Active?</th>
            <th>Is Contact?</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @lead_actions.each do |lead_action| %>
            <tr>
              <td class="first-column"><%= lead_action.name %></td>
              <td style="font-size: 1.5em;"><%= glyph(lead_action.glyph) %></td>
              <td><%= lead_action.description %></td>
              <td><%= lead_action.active ? "Yes" : "No" %></td>
              <td><%= lead_action.is_contact ? "Yes" : "No" %></td>
              <td class="text-nowrap">
                <%= link_to lead_action do %><%= glyph(:show) %><% end %>&nbsp;
                <%= link_to edit_lead_action_path(lead_action) do %><%= glyph(:edit) %><% end %>&nbsp;
                <%= link_to lead_action, method: :delete, data: { confirm: 'Are you sure?' } do %><%= glyph(:delete) %><% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div classs="row">
    <% if policy(LeadAction).new? %>
      <div class="col-md-12 text-right">
        <%= glyph(:create) %>
        <%= link_to 'Create New Lead Action', new_lead_action_path %>
      </div>
    <% end %>
  </div>
</div>
