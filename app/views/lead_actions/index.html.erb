<h1>Lead Actions</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lead_actions.each do |lead_action| %>
      <tr>
        <td><%= lead_action.id %></td>
        <td><%= lead_action.name %></td>
        <td><%= lead_action.description %></td>
        <td><%= lead_action.active %></td>
        <td><%= link_to 'Show', lead_action %></td>
        <td><%= link_to 'Edit', edit_lead_action_path(lead_action) %></td>
        <td><%= link_to 'Destroy', lead_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

