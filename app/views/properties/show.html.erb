<div class="container">
  <div class="row">
    <div class="col-md-10">

      <div class="row">
        <div class="col-md-6">
          <h1>Property: <%= @property.name %></h1>
        </div>
      </div>

      <h2>Property Information</h2>

      <div class="row">
        <div class="col-md-4">
          <p>
            <strong>Active:</strong>
            <%= @property.active %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p>
            <strong>Name:</strong>
            <%= @property.name %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p>
            <strong>Organization:</strong>
            <%= @property.organization %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <p>
            <strong>Address1:</strong>
            <%= @property.address1 %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <p>
            <strong>Address2:</strong>
            <%= @property.address2 %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <p>
            <strong>Address3:</strong>
            <%= @property.address3 %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p>
            <strong>City:</strong>
            <%= @property.city %>
          </p>
        </div>
        <div class="col-md-2">
          <p>
            <strong>State:</strong>
            <%= @property.state %>
          </p>
        </div>
        <div class="col-md-2">
          <p>
            <strong>Zip:</strong>
            <%= @property.zip %>
          </p>
        </div>
        <div class="col-md-2">
          <p>
            <strong>Country:</strong>
            <%= @property.country %>
          </p>
        </div>
      </div>


      <div class="row">
        <div class="col-md-6">

          <p>
            <strong>Organization:</strong>
            <%= @property.organization %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <p>
            <strong>Contact name:</strong>
            <%= @property.contact_name %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <p>
            <strong>Phone:</strong>
            <%= @property.phone %>
          </p>
        </div>
        <div class="col-md-4">
          <p>
            <strong>Fax:</strong>
            <%= @property.fax %>
          </p>
        </div>
      </div>


      <div class="row">
        <div class="col-md-6">

          <p>
            <strong>Email:</strong>
            <%= @property.email %>
          </p>
        </div>
      </div>


      <div class="row">
        <div class="col-md-6">

          <p>
            <strong>Units:</strong>
            <%= @property.units %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">

          <p>
            <strong>Notes:</strong>
            <%= @property.notes %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <h2>Listings</h2>
          <% if @property.listings.empty? %>
            <p>None</p>
          <% end %>

          <% @property.listings.each do |listing| %>
            <div class="row">
              <div class="col-md-3">
                <h4><%= link_to(listing.source.name, lead_source_path(listing.source)) %></h4>
                <p>
                  <strong>ID/Code:</strong>
                  <%= listing.code %>
                </p>
              </div>
              <div class="col-md-6">
                <p>
                  <strong>Description</strong>
                  <%= listing.description %>
                </p>
                <p>
                  <strong>Active?:</strong>
                  <%= listing.active %>
                </p>

              </div>
            </div>
          <% end %>

        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <h2>Agents</h2>
          <% if @property.agents.empty? %>
            <p>None</p>
          <% end %>

          <ul>
            <% @property.agents.each do |agent| %>
              <li><%= link_to(agent.name, user_path(agent)) %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <h2>Unit Types</h2>
          <% if @property.unit_types.empty? %>
            <p>None</p>
          <% end %>
          <p>
            <%= link_to(new_unit_type_path(property_id: @property.id) ) do %>
              <%= glyph(:create) %>
              New
            <% end %>
          </p>
          <ul>
            <% @property.unit_types.order(name: 'ASC').each do |unit_type| %>
              <li><%= link_to(unit_type.name, unit_type_path(unit_type)) %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">

          <%= link_to 'Edit', edit_property_path(@property) %> |
          <%= link_to 'Back', :back %>
        </div>
      </div>


    </div>
  </div>

</div>
