<div class="container">
  <div class="row">
    <div class="col-md-6">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h1>Properties</h1>
    </div>
    <div class="col-md-6 text-right">
      <%= glyph(:create) %>
      <%= link_to 'Create New Property', new_property_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Organization</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @properties.each do |property| %>
            <tr>
              <td class="first-column"><%= property.name %></td>
              <td><%= property.organization %></td>
              <td>
                <%= glyph(:person) %> <%= property.contact_name %><br/>
                <%= glyph(:email) %> <%= property.email || '-' %><br/>
                <%= glyph(:phone) %> <%= property.phone || '-' %><br/>
                <%= glyph(:fax) %> <%= property.fax || '-' %><br/>
              </td>
              <td>
                <p class="glyph-indent">
                  <span style="display: block; float: left;"><%= glyph(:address) %></span>
                  <span style="display: block; margin-left: 1.5em;">
                    <%=raw [h(property.address1), h(property.address2), h(property.address3)].join('<br/>') %></br>
                  </span>
                </p>
              </td>
              <td>
                <%= link_to 'Show', property %> |
                <%= link_to 'Edit', edit_property_path(property) %> |
                <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>

    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right">
      <%= glyph(:create) %>
      <%= link_to 'Create New Property', new_property_path %>
    </div>
  </div>
</div>
