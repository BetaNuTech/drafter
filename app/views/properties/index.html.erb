<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Address3</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Country</th>
      <th>Organization</th>
      <th>Contact name</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Units</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.address1 %></td>
        <td><%= property.address2 %></td>
        <td><%= property.address3 %></td>
        <td><%= property.city %></td>
        <td><%= property.state %></td>
        <td><%= property.zip %></td>
        <td><%= property.country %></td>
        <td><%= property.organization %></td>
        <td><%= property.contact_name %></td>
        <td><%= property.phone %></td>
        <td><%= property.fax %></td>
        <td><%= property.email %></td>
        <td><%= property.units %></td>
        <td><%= property.notes %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

