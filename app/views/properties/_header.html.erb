<% if @current_property.present? %>
<div id="property-header" class="row bg-info">
  <div class="col-md-3 lead">
    <%= link_to(@current_property.name, @current_property) %>
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-4">
        <%= link_to(search_leads_path({lead_search: {property_ids: [@current_property.id]}})) do %>
          <h4>Leads</h4>
        <% end %>
        <%= link_to(new_lead_path(property_id: @current_property.id)) do %>
          <span class="btn btn-xs btn-primary">Add</span>
        <% end %>
        <p>
          Mine: <%= link_to(search_leads_path({lead_search: {property_ids: [@current_property.id], user_ids: [current_user.id]}})) do %><%= @current_property.leads.for_agent(current_user).count %><% end %> | 
          Open: <%= link_to(search_leads_path({lead_search: {property_ids: [@current_property.id], states: ['open']}})) do %><%= @current_property.leads.open.count %><% end %> |
          Active: <%= link_to(search_leads_path({lead_search: {property_ids: [@current_property.id], states: ['open', 'claimed']}})) do %><%= @current_property.leads.active.count %><% end %> |
          All: <%= link_to(search_leads_path({lead_search: {property_ids: [@current_property.id]}})) do %><%= @current_property.leads.count %><% end %>
        </p>
      </div>
      <div class="col-md-4">
        <%= link_to(property_units_path(@current_property)) do %>
          <h4>Units</h4>
        <% end %>
        <%= link_to(new_property_unit_path(@current_property)) do %>
          <span class="btn btn-xs btn-primary">Add</span>
        <% end %>
        <p>
          Total: <%= @current_property.units %> |
          Occupied: <%= @current_property.housing_units.occupied.count %>
          <small>(<%= @current_property.occupancy_rate %>%)</small>
        </p>
      </div>
      <div class="col-md-4">
        <%= link_to(property_residents_path(@current_property)) do %>
          <h4>Residents</h4>
        <% end %>
        <%= link_to(new_property_resident_path(@current_property)) do %>
          <span class="btn btn-xs btn-primary">Add</span>
        <% end %>
        <p>
          Total: <%= @current_property.residents.current.count %>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
