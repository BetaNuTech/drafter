<% if @property.present? %>
<div id="property-header" class="row bg-info">
  <div class="col-md-4 lead">
    <%= link_to(@property.name, @property) %>
  </div>
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-4">
        <%= link_to(search_leads_path({lead_search: {property_ids: [@property.id]}})) do %>
          <h4>Leads</h4>
        <% end %>
        <%= link_to(new_lead_path(property_id: @property.id)) do %>
          <span class="btn btn-xs btn-info">Add</span>
        <% end %>
        <p>
          Mine(<%= link_to(search_leads_path({lead_search: {property_ids: [@property.id], user_ids: [current_user.id]}})) do %><%= @property.leads.for_agent(current_user).count %><% end %>)
          Open(<%= link_to(search_leads_path({lead_search: {property_ids: [@property.id], states: ['open']}})) do %><%= @property.leads.open.count %><% end %>)
          Active(<%= link_to(search_leads_path({lead_search: {property_ids: [@property.id], states: ['open', 'claimed']}})) do %><%= @property.leads.active.count %><% end %>)
          All(<%= link_to(search_leads_path({lead_search: {property_ids: [@property.id]}})) do %><%= @property.leads.count %><% end %>)
        </p>
      </div>
      <div class="col-md-4">
        <%= link_to(property_units_path(@property)) do %>
          <h4>Units</h4>
        <% end %>
        <%= link_to(new_property_unit_path(@property)) do %>
          <span class="btn btn-xs btn-info">Add</span>
        <% end %>
        <p>
          Total(<%= @property.units %>)
          Occupied(<%= @property.housing_units.occupied.count %>
          <small><%= @property.occupancy_rate %>%</small>)
        </p>
      </div>
      <div class="col-md-4">
        <%= link_to(property_residents_path(@property)) do %>
          <h4>Residents</h4>
        <% end %>
        <%= link_to(new_property_resident_path(@property)) do %>
          <span class="btn btn-xs btn-info">Add</span>
        <% end %>
        <p>
          Total(<%= @property.residents.current.count %>)
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
