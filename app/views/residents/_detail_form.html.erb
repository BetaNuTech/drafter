<%= form.fields_for :detail do  |detail_form| %>
  <%= detail_form.hidden_field :id %>
  <div class="fieldset_content">
    <fieldset>
      <legend>Details</legend>

      <div class="row">
        <div class="col-md-3 form-group">
          <%= detail_form.label :phone1 %>
          <%= detail_form.text_field :phone1, class: "form-control" %>
        </div>
        <div class="col-md-3 form-group">
          <%= detail_form.label :phone1_type %>
          <%= detail_form.select :phone1_type, options_for_select(ResidentDetail::PHONE_TYPES), {include_blank: true}, { class: "form-control" } %>
        </div>
        <div class="col-md-3 form-group">
          <%= detail_form.label :phone1_tod, "Best Time to Call" %>
          <%= detail_form.select :phone1_tod, options_for_select(ResidentDetail::PHONE_TOD), {include_blank: true}, { class: "form-control" } %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3 form-group">
          <%= detail_form.label :phone2 %>
          <%= detail_form.text_field :phone2, class: "form-control" %>
        </div>
        <div class="col-md-3 form-group">
          <%= detail_form.label :phone2_type %>
          <%= detail_form.select :phone2_type, options_for_select(ResidentDetail::PHONE_TYPES), {include_blank: true}, { class: "form-control" } %>
        </div>
        <div class="col-md-3 form-group">
          <%= detail_form.label :phone2_tod, "Best Time to Call" %>
          <%= detail_form.select :phone2_tod, options_for_select(ResidentDetail::PHONE_TOD), {include_blank: true}, { class: "form-control" } %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-6">
          <%= detail_form.label :email %>
          <%= detail_form.text_field :email, {class: "form-control"} %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-6">
          <%= detail_form.label :ssn, "SSN" %>
          <%= detail_form.text_field :ssn, {class: "form-control"} %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 form-group">
          <%= detail_form.label :id_number, "DL/ID Number" %>
          <%= detail_form.text_field :id_number, class: "form-control" %>
        </div>
        <div class="col-md-2 form-group">
          <%= detail_form.label :id_state, "DL/ID State" %>
          <%= detail_form.select :id_state, options_for_select(US_STATES), {include_blank: true}, { class: "form-control" } %>
        </div>
      </div>

    </fieldset>
  </div>
<% end %>
