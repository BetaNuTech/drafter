<div class="state_toggle">
  <div class="row" >
    <div class="col-md-12" class="dropdown">
      <ul id="crumbs">
        <li class="crumb">
          <a role="button" class="crumb-link crumb-active dropdown-toggle" data-toggle="dropdown" href="#">Open</a>
          <% if policy(lead).permitted_state_events.any? %>
          <ul class="dropdown-menu">
            <% policy(lead).permitted_state_events.each do |event_name| %>
              <li>
                <%= link_to(trigger_state_event_lead_path(id: lead.id, eventid: event_name),
                            remote: true,
                            method: :post,
                            data: {confirm: "Are you sure?"} ) do %>
                  <%= event_name.capitalize %>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>
        </li>
        <li class="crumb">
          <a class="crumb-link crumb-inactive" href="#">Prospect</a>
        </li>
        <li class="crumb">
          <a class="crumb-link crumb-inactive" href="#">Application</a>
        </li class="crumb">
        <li class="crumb">
          <a class="crumb-link crumb-inactive" href="#">MoveIn</a>
        </li>
        <li class="crumb">
          <a class="crumb-link crumb-inactive" href="#">Resident</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="state_toggle-agent row">
    <div class="col-md-12 nowrap">
      <% if lead.user.present? %>
        <strong>Agent:</strong> <%= lead.user.name %>
      <% end %>
    </div>
  </div>
</div>
