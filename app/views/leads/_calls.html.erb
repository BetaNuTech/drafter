<div class="row calls">
  <div class="col-md-12">

    <div class="row">
      <div class="col-md-6">
        <h2>Calls</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <% if lead.calls.present? %>
        <table class="table">
          <thead>
            <th>Date</th>
            <th>From</th>
            <th>To</th>
            <th>Disposition</th>
            <th>Recording</th>
          </thead>
          <% lead.calls.each do |call| %>
            <tr>
              <td><%= long_datetime(DateTime.parse(call["date"])) rescue '' %></td>
              <td><%= call["src"] %></td>
              <td><%= call["dst"] %></td>
              <td><%= call["disposition"] %></td>
              <td><%= call["recordingfile"].empty? ? 'None' : call["recordingfile"] %></td>
            </tr>
          <% end %>
        </table>
        <% else %>
          <p class="lead">
            None
          </p>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <em>Call log last updated <%= distance_of_time_in_words(lead.call_log_updated_at || DateTime.now, DateTime.now) %> ago</em>
      </div>
    </div>
  </div>
</div>

