<div class="row" style="margin-top: 1em">
  <div class="col">
    <h2>
      Projects
      <% if policy(Project).new?  %>
      <small>
        <%= link_to(new_project_path, class: 'action-link') do %>
          <%= inline_icon(icon: :add) %>
        <% end %>
      </small>
      <% end %>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= render partial: 'project', collection: projects %>
  </div>
</div>
