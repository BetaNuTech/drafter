  <div class="row">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-6">
              <h3>Today</h3>
            </div>
            <div class="col-md-2" style="padding-top: 20px;">
              <%= link_to("View All", notes_path, {class: "btn btn-xs btn-success"})  %>
            </div>
            <div class="col-md-4 text-right" style="padding-top: 20px;">
              <%= link_to("Schedule Event/TODO", new_note_path, {class: "btn btn-xs btn-success"}) %>
            </div>
          </div>
          <table class="table">
            <thead></thead>
            <tbody>
              <tr>
                <% lead = Lead.offset(rand(Lead.count)).first %>
                <td><%= glyph(:person) %></td>
                <td>Now</td>
                <td>Unclaimed Lead: <%= link_to(lead.name, lead_path(lead))%></td>
                <td>
                  <%= link_to(glyph(:show), "#") %>&nbsp;
                  <%= link_to(glyph(:edit), "#") %>
                </td>
              </tr>
              <tr>
                <% lead = Lead.offset(rand(Lead.count)).first %>
                <td><%= glyph(:person) %></td>
                <td>Now</td>
                <td>Unclaimed Lead: <%= link_to(lead.name, lead_path(lead))%></td>
                <td>
                  <%= link_to(glyph(:show), "#") %>&nbsp;
                  <%= link_to(glyph(:edit), "#") %>
                </td>
              </tr>
              <tr>
                <td><%= glyph(:pin) %></td>
                <% lead = Lead.offset(rand(Lead.count)).first %>
                <td>Today</td>
                <td>Contact via email <%= link_to(lead.name, lead_path(lead)) %> </td>
                <td>
                  <%= link_to(glyph(:show), "#") %>&nbsp;
                  <%= link_to(glyph(:edit), "#") %>
                </td>
              </tr>
              <tr>
                <% lead = Lead.offset(rand(Lead.count)).first %>
                <td><%= glyph(:pin) %></td>
                <td>10:00AM</td>
                <td>Tour <%= link_to(lead.name, lead_path(lead)) %> </td>
                <td>
                  <%= link_to(glyph(:show), "#") %>&nbsp;
                  <%= link_to(glyph(:edit), "#") %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-6">
              <h3>Upcoming</h3>
            </div>
          </div>
          <table class="table">
            <thead></thead>
            <tbody>
              <tr>
                <% lead = Lead.open.offset(rand(Lead.open.count)).first || Lead.first %>
                <td><%= glyph(:pin) %></td>
                <td>Today</td>
                <td>Contact via email <%= link_to(lead.name, lead_path(lead)) %> </td>
                <td>
                  <%= link_to(glyph(:show), "#") %>&nbsp;
                  <%= link_to(glyph(:edit), "#") %>
                </td>
              </tr>
              <tr>
                <% lead = Lead.claimed.offset(rand(Lead.open.count)).first || Lead.first %>
                <td><%= glyph(:pin) %></td>
                <td>10:00AM</td>
                <td>Tour <%= link_to(lead.name, lead_path(lead)) %> </td>
                <td>
                  <%= link_to(glyph(:show), "#") %>&nbsp;
                  <%= link_to(glyph(:edit), "#") %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-6">
              <h3>My Leads</h3>
            </div>
            <div class="col-md-6 text-right" style="padding-top: 20px;">
              <%= link_to("Create Lead", new_lead_path, {class: "btn btn-xs btn-success"}) %>
            </div>
          </div>
          <table class="table">
            <tbody>
              <% current_user.leads.each do |lead| %>
                <tr>
                  <td>
                    <%= lead.priority.capitalize %> -
                    <%= lead.state.capitalize %><br/>
                    <strong>First Contact: </strong> <%= short_date(lead.first_comm) %><br/>
                    <strong>Last Contact: </strong> <%= short_date(lead.last_comm) %><br/>
                    <strong>Pending Tasks/Events: </strong> <a href="#">3</a>
                  </td>
                  <td>
                    <strong><%= link_to(lead.name, lead_path(lead)) %></strong><br/>
                    <strong>Phone: </strong> <%= [lead.phone1, lead.phone2].compact.first %><br/>
                    <strong>Email: </strong> <%= lead.email %>
                </td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12">
            <h3>Stats</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <table class="table">
              <tbody>
                <tr>
                  <td><strong>My Leads</strong></td>
                  <td>
                    <ul>
                      <li>in Pipeline:  <%= current_user.leads.count %></li>
                      <li>Closed This Week:  2 </li>
                      <li>Closed This Month:  2 </li>
                      <li>Closed This Year:  2 </li>
                    </ul>                   
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>
<div class="row">
</div>
<div class="col-md-6">
  <h2></h2>
</div>
</div>
