<%= turbo_frame_tag project do %>
  <div class="card project-card">
    <div class="card-body">
      <h3 class="card-title">
        <%= link_to(project.name, project_path(project), data: {'turbo_frame': '_top'}) %>
      </h3>
      <div class="card-action-buttons">
        <%= link_to(image_tag(edit_image), edit_project_path(project), class: 'action-link', data: { 'turbo_frame': project }) if policy(project).edit? %>
        <%= link_to(image_tag(destroy_image), project_path(project), class: 'action-link', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }) if policy(project).destroy? %>
      </div>
      <div class="card-text">
        <p>
          <b>Budget:</b> <%= number_to_currency(project.budget) %>
          <br/>
          <%= project.description %>
        </p>
      </div>
    </div>
  </div>
<% end %>

