<%= turbo_frame_tag 'project-members' do %>
<div class="card" data-controller="projectmembers" id="project-members--container">
    <h5 class="card-header">
      Members
      <span class="badge bg-info">
        <%= service.member_count %>
      </span>
      <%= link_to('Select Member', '#project-members--user-selector',
                  { class: 'btn btn-sm btn-primary',
                    data: {
                      'bs-toggle': 'collapse',
                      'aria-expanded': 'false',
                      'aria-controls': 'project-members--user-selector',
                      'turbo': 'false'
                    }
                  }) %>
    </h5>
  <div class="card-body">
    <%= render partial: 'members_add_member', locals: { service: @service } %>
    <ul class="list-group list-group-flush">
      <% project.users.ordered_by_name.each do |user| %>
          <li><%= user.name %></li>
      <% end %>
    </ul>
  </div>
</div> 
<% end %>
