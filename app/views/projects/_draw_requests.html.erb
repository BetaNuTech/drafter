<div class="card">
  <h5 class="card-header">
    Draw Requests
    <span class="badge bg-info" style="font-size: 0.6em; vertical-align: middle;">
      2
    </span>
    <span class="badge bg-warning" style="font-size: 0.6em; vertical-align: middle;">
      3
    </span>
    <%= link_to('Create Draw', '#', class: 'btn btn-sm btn-success') %>
  </h5>
  <div class="card-body">
    <div class="card-header bg-info">
      <b>Pending</b>
    </div>
    <% if true %> 
      <ul class="list-group list-group-flush">
        <% (1..2).each do |draw| %>
          <li class="list-group-item">
            <%= full_datetime(Time.now - rand(10-draw).days - rand(20).hours - rand(60).minutes) %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <em>None</em>
    <% end %>

    <hr/>

    <div class="card-header bg-warning">
      <b>Submitted</b>
    </div>
    <% if true %> 
      <ul class="list-group list-group-flush">
        <% (1..3).each do |draw| %>
          <li class="list-group-item">
            <%= full_datetime(Time.now - rand(10-draw).days - rand(20).hours - rand(60).minutes) %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <em>None</em>
    <% end %>

  </div>
</div>
