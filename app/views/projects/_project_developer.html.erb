<%= turbo_frame_tag project do %>
  <div class="card project-card">
    <div class="card-body">
      <h3 class="card-title">
        <%= link_to(project.name, project_path(project), data: {'turbo_frame': '_top'}) %>
      </h3>
      <div class="card-action-buttons">
      </div>
      <div class="card-text">
        <p>
          <%= project.description %>
        </p>
      </div>
    </div>
  </div>
<% end %>

