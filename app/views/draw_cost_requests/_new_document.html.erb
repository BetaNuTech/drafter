<div class="card draw_cost_request_card text-center p-1 m-1 d-inline-flex " >
  <%= form_with(model: draw_cost_document,
                url: draw_cost_request_add_document_path(draw_cost_request_id: draw_cost_request.id) ) do |form| %>
    <img class="card_upload_image"></img>
    <div class="card_upload_button">
      <%= image_tag upload_image %>
      <%= file_field_tag :document %>
    </div>
    <div class="card-body">
      <p class="upload_document_description">
        Upload <%= documenttype.to_s.capitalize %>
        Document
      </p>
      <%= submit_tag 'Submit', class: 'btn btn-sm btn-success' %>
    </div>
  <% end %>
</div>
