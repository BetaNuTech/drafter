<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Users</h1>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to 'Create New User', new_user_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>System Role</th>
            <th>Team</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.office_phone.present? %>
                  <%= glyph(:phone) %> <strong>Office:</strong> <%= user.office_phone || '-' %><br/>
                <% end %>
                <% if user.cell_phone.present? %>
                  <%= glyph(:phone) %> <strong>Cell:</strong> <%= user.cell_phone || '-' %><br/>
                <% end %>
                <% if user.fax.present? %>
                  <%= glyph(:fax) %> <strong>Fax:</strong> <%= user.fax || '-' %><br/>
                <% end %>
              </td>
              <td><%= user.role.try(:name) || 'None' %></td>
              <td>
                <% if user.team.present? %>
                  <%= link_to(user.team.name, team_path(user.team)) %> (<%= user.team_title %>)
                <% end %>
              <td>
                <%= link_to user do %><%= glyph(:show) %><% end if policy(user).show? %>&nbsp;
                <%= link_to edit_user_path(user) do %><%= glyph(:edit) %><% end if policy(user).edit? %>&nbsp;
                <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %><%= glyph(:delete) %><% end if policy(user).destroy? %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right">
      <%= link_to 'Create New User', new_user_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>
