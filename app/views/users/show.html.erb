<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>
        <strong>Created At:</strong>
        <%= @user.created_at %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>
        <strong>Updated At:</strong>
        <%= @user.updated_at %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <p>
        <strong>Last Sign In:</strong>
        <%= @user.last_sign_in_at %>
      </p>
    </div>
    <div class="col-md-4">
      <p>
        <strong>Last Sign In IP:</strong>
        <%= @user.last_sign_in_ip %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>
        <strong>Locked:</strong>
        <%= @user.locked_at ? @user.locked_at : 'No' %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', users_path %>
    </div>
  </div>
</div>



