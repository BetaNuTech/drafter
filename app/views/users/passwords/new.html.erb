<div class="row">
  <div class="col">
    <h2>Forgot your password?</h2>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="row">
        <div class="col">
          <%= render "users/shared/error_messages", resource: resource %>
        </div>
      </div>

      <div class="row">
        <div class="col-6 form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-6 form-group">
          <%= f.submit "Send me password reset instructions", class: "btn btn-primary form-control" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= render "users/shared/links" %>
  </div>
</div>
