
<% if resource&.errors.any? %>
  <div class="row">
    <div id="error_explanation" class="col alert bg-warning" >
      <div class="row">
        <div class="col-1">
          <%= image_tag "icons/exclamation-triangle-fill.svg", class: 'svgicon' %>
        </div>
        <div class="col">
          <%= I18n.t("errors.messages.not_saved",
                     count: resource.errors.count,
                     resource: resource.class.model_name.human.downcase)
           %>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
