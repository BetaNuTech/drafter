<div class="row">
  <div class="col">
    <h1><%= link_to(@draw.name, project_draw_path(project_id: @draw.project_id, id: @draw.id), data: {'turbo_frame': '_top'}) %> &mdash; Costs</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="row p-2 text-center">
      <div class="col p-4 bg-light border border-1 border-secondary">
        <h2><%= @draw.name %> Total Cost: $XX,XXX.XX</h2>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <%= link_to('Add Draw Cost', new_draw_draw_cost_path(draw_id: @draw.id), data: {'turbo_frame': '_top'}) %>
      </div>
    </div>

    <%= render @draw.draw_costs %>
  </div>
</div>
